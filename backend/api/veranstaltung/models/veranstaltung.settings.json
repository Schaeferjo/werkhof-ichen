{
  "kind": "collectionType",
  "collectionName": "veranstaltungs",
  "info": {
    "name": "Veranstaltung"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Titel": {
      "type": "string"
    },
    "Beschreibung": {
      "type": "richtext"
    },
    "Datum": {
      "type": "datetime"
    },
    "Preis": {
      "type": "decimal"
    },
    "buchungen": {
      "via": "veranstaltung",
      "collection": "buchung"
    },
    "Vorschaubild": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "Kategorie": {
      "type": "enumeration",
      "enum": [
        "kurse_fuer_kinder_und_jugendliche",
        "kurse_fuer_erwachsene",
        "geburtstagsevents"
      ],
      "required": true
    }
  }
}
